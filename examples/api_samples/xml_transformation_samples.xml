<?xml version="1.0" encoding="UTF-8"?>
<requests>
    <!-- XPath örnek istekleri -->
    <xpath-request>
        <name>Get All Book Titles</name>
        <request-body>
            <xpath>//book/title/text()</xpath>
            <content>
                <library>
                    <books>
                        <book id="1">
                            <title>To Kill a Mockingbird</title>
                            <author>Harper Lee</author>
                            <year>1960</year>
                            <isbn>978-0446310789</isbn>
                        </book>
                        <book id="2">
                            <title>1984</title>
                            <author>George Orwell</author>
                            <year>1949</year>
                            <isbn>978-0451524935</isbn>
                        </book>
                    </books>
                </library>
            </content>
        </request-body>
    </xpath-request>
    
    <xpath-request>
        <name>Count Books</name>
        <request-body>
            <xpath>count(//book)</xpath>
            <content>
                <library>
                    <books>
                        <book id="1">
                            <title>To Kill a Mockingbird</title>
                            <author>Harper Lee</author>
                        </book>
                        <book id="2">
                            <title>1984</title>
                            <author>George Orwell</author>
                        </book>
                    </books>
                </library>
            </content>
        </request-body>
    </xpath-request>
    
